<% @tasks.each do |task| %>
<input type="checkbox" <%= "checked" if task.completed  %>>
<h2> <%= link_to task.title, task_path(task)  %></h2>
<p><%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %></p>
<% end %>

<p><%= link_to "Add a new task", new_task_path  %></p>
